<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 어플리케이션 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AppTheme.NoActionBar.Transparent">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ILovePlanAppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarTabTextStyle">@style/actionBarTabTextStyle</item>
    </style>

    <!-- 탭 -->
    <style name="actionBarTabTextStyle" parent="android:Widget.Holo.Light.ActionBar.TabText.Inverse">
        <item name="android:textSize">15sp</item>
    </style>

    <!-- 스피너 -->
    <style name="Spinner" parent="@android:style/Widget.Holo.Light.Spinner" />

    <!-- 구분자 -->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/bg_divider</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- 캘린더 -->
    <style name="MonthView_DayLabel">
        <item name="android:layout_width">29dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textAppearance">@style/TextAppearance.MonthView_DayLabel</item>
    </style>

    <style name="MonthView_MiniMonthLabel">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_mini_day_number</item>
    </style>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.MonthView_MiniDayLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/month_other_month_day_number</item>
    </style>

    <style name="TextAppearance.MonthView_DayLabel">
        <item name="android:textSize">@dimen/day_label_text_size</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:textColor">@color/month_day_names_color</item>
    </style>

</resources>